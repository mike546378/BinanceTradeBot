{
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-config-prettier",
        "tslint-react-hooks"
    ],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts"
        ]
    },
    "rules": {
        "semicolon": [
            true,
            "always"
        ],
        "no-trailing-whitespace": true,
        "quotemark": [
            true,
            "double",
            "avoid-escape",
            "jsx-double",
            "avoid-template"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "singleline": "never",
                "esSpecCompliant": true
            }
        ],
        "max-classes-per-file": false,
        "interface-name": false,
        "no-namespace": false,
        "ordered-imports": true,
        "no-console": true,
        "react-hooks-nesting": "error",
        "no-unused-variable": true,
        "jsx-no-lambda": false
    }
}